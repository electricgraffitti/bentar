<% form_for(@project) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, "* Project Name" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Select A Category" %><br />
    <%= collection_select(:project, :category_id, categories, :id, :category_type) %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5, :cols => 28 %>
  </p>
  <p>
    <%= f.submit 'Submit', :class => 'btn' %>
  </p>
<% end %>