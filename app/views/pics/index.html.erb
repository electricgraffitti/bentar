<h1>Listing pics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Main display</th>
    <th>Interior</th>
    <th>Exterior</th>
  </tr>

<% @pics.each do |pic| %>
  <tr>
    <td><%=h pic.title %></td>
    <td><%=h pic.description %></td>
    <td><%=h pic.main_display %></td>
    <td><%=h pic.interior %></td>
    <td><%=h pic.exterior %></td>
    <td><%= link_to 'Show', pic %></td>
    <td><%= link_to 'Edit', edit_pic_path(pic) %></td>
    <td><%= link_to 'Destroy', pic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New pic', new_pic_path %>